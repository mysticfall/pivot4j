<?xml version="1.0"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
              xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
    <application>
        <resource-bundle>
            <base-name>org.pivot4j.analytics.i18n.messages</base-name>
            <var>msg</var>
        </resource-bundle>
        <message-bundle>org.pivot4j.analytics.i18n.messages</message-bundle>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>en</supported-locale>
        </locale-config>
    </application>

    <managed-bean>
        <managed-bean-name>reportRepository</managed-bean-name>
        <managed-bean-class>org.pivot4j.analytics.repository.test.TestRepositoryImpl</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>

    <factory>
        <exception-handler-factory>
            org.pivot4j.analytics.exception.Pivot4JExceptionHandlerFactory
        </exception-handler-factory>
    </factory>
</faces-config>
