<?xml version="1.0" encoding="UTF-8"?>
<faces-config version="2.0" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xi="http://www.w3.org/2001/XInclude" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd">
	<application>
		<resource-bundle>
			<base-name>com.eyeq.pivot4j.analytics.i18n.messages</base-name>
			<var>msg</var>
		</resource-bundle>
		<message-bundle>com.eyeq.pivot4j.analytics.i18n.messages</message-bundle>
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>ko</supported-locale>
			<supported-locale>pt_BR</supported-locale>
		</locale-config>
	</application>

	<factory>
		<exception-handler-factory>
			com.eyeq.pivot4j.analytics.exception.Pivot4JExceptionHandlerFactory
		</exception-handler-factory>
	</factory>

	<managed-bean>
		<managed-bean-name>dataSourceManager</managed-bean-name>
		<managed-bean-class>com.eyeq.pivot4j.pentaho.datasource.PentahoDataSourceManager</managed-bean-class>
		<managed-bean-scope>session</managed-bean-scope>
	</managed-bean>

	<managed-bean>
		<managed-bean-name>pivotStateManager</managed-bean-name>
		<managed-bean-class>com.eyeq.pivot4j.analytics.ui.PivotStateManager</managed-bean-class>
		<managed-bean-scope>view</managed-bean-scope>
		<managed-property>
			<property-name>settings</property-name>
			<value>#{settings}</value>
		</managed-property>
		<managed-property>
			<property-name>viewStateHolder</property-name>
			<value>#{viewStateHolder}</value>
		</managed-property>
	</managed-bean>
</faces-config>
